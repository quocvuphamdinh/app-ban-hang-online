<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_height="150dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/cardViewKeyBoardItem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/imageViewKeyBoardItem"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textViewGiaKeyBoardItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/custom_text_view_gia"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:layout_below="@id/textViewGiaKeyBoardItem"
            android:id="@+id/textViewTenKeyBoardItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewKeyBoardItem"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:layout_below="@id/textViewTenKeyBoardItem"
            android:id="@+id/textViewMoTaKeyBoardItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewKeyBoardItem"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textStyle="italic" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>