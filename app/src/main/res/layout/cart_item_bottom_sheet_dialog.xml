<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartViewCartBottomSheet"
        app:cardCornerRadius="5dp"
        app:cardElevation="30dp"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/imageViewCartBottomSheetDialog"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textViewTenCartBottomSheetDialog"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/app_name"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/cartViewCartBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewGiaCartBottomSheetDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTenCartBottomSheetDialog"
        android:layout_marginHorizontal="10dp"
        android:layout_toStartOf="@id/textViewSoLuongCartItemBottomSheet"
        android:layout_toEndOf="@id/cartViewCartBottomSheet"
        android:text="@string/app_name"
        android:textColor="#F44336"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textViewSoLuongCartItemBottomSheet"
        android:gravity="end"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingHorizontal="10dp"
        android:text="Số lượng: "
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textViewTenCartBottomSheetDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>