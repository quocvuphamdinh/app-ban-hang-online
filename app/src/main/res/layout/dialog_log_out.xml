<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewLogoutTitle"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Bạn muốn đăng xuất khỏi tài khoản này?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonLogOut"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewLogoutTitle"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_button_logout"
            android:text="Đăng xuất"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/buttonHuyLogOut"
            android:text="Hủy"
            android:background="@drawable/custom_button_logout_2"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textViewLogoutTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>