<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginVertical="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageViewHinhDonHangItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewTenSanPhamDonHangItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@id/textViewSoLuongSanPhamDonHangItem"
        android:layout_toEndOf="@id/imageViewHinhDonHangItem"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/textViewTenDonHangItem"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:text="@string/app_name"
        android:layout_toStartOf="@id/textViewSoLuongSanPhamDonHangItem"
        android:layout_toEndOf="@id/imageViewHinhDonHangItem"
        android:layout_below="@id/textViewTenSanPhamDonHangItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewSoLuongSanPhamDonHangItem"
        android:textColor="@color/black"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        android:layout_below="@id/textViewTenSanPhamDonHangItem"
        android:layout_alignParentEnd="true"
        android:text="x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewTongTienDonHangItem"
        android:textSize="16sp"
        android:textColor="#F44336"
        android:paddingEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textViewSoLuongSanPhamDonHangItem"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewTrangThaiDonHangItem"
        android:paddingHorizontal="10dp"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textViewTongTienDonHangItem"
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewDiaChiDonHangItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTrangThaiDonHangItem"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:text="@string/app_name"
        android:textColor="#FF5722"
        android:textSize="16sp" />
</RelativeLayout>