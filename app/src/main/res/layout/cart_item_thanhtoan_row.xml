<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewHinhCartThanhToan"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
    <TextView
        android:layout_marginHorizontal="10dp"
        android:id="@+id/textViewTenCartThanhToan"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/app_name"
        android:layout_marginTop="15sp"
        android:layout_toEndOf="@id/imageViewHinhCartThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewGiaCartThanhToan"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/app_name"
        android:layout_toEndOf="@id/imageViewHinhCartThanhToan"
        android:layout_below="@id/textViewTenCartThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginEnd="10dp"
        android:id="@+id/textViewSoLuongCartThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewGiaCartThanhToan"
        android:layout_alignParentEnd="true"
        android:text="@string/app_name" />
</RelativeLayout>