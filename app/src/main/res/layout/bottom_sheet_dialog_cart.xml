<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="14sp"
            android:text="Thanh toán giỏ hàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewTongTien"
            android:padding="10dp"
            android:textColor="#F44336"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Tổng tiền: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableRightCompat="@drawable/ic_shopping_cart" />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/textViewChuaChon"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Bạn chưa chọn mặt hàng để thanh toán"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/listViewBottomSheetDialog"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <Button
        android:id="@+id/buttonThanhToanBottomSheetDialog"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_login"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:text="Thanh toán"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonDismissBottomSheetDialog"
        android:textColor="@color/black"
        android:text="Hủy"
        android:background="@drawable/custom_button_dismiss_cart"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>