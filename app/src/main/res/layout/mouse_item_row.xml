<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewMouseItem"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_toStartOf="@id/imageViewMouseItem"
                android:id="@+id/textViewTenMouseItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/app_name"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewGiaMouseItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTenMouseItem"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@id/imageViewMouseItem"
                android:text="@string/app_name"
                android:textColor="#FF9800"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewMoTaMouseItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewGiaMouseItem"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@id/imageViewMouseItem"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </RelativeLayout>
        <ImageView
            android:id="@+id/imageViewSoldOutMouseItem"
            android:layout_gravity="end"
            android:src="@drawable/sold_out"
            android:layout_width="61dp"
            android:layout_height="50dp"/>
    </FrameLayout>

</androidx.cardview.widget.CardView>