<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="5dp"
        android:text="Giỏ hàng của bạn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:drawableStart="@drawable/ic_check_all"
        android:id="@+id/textViewChonTatCaCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:text="Chọn tất cả"
        android:textColor="#F44336"
        android:textStyle="bold" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/textViewChonTatCaCart"
        android:background="#D3D3D3"
        android:id="@+id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
    <Button
        android:textColor="@color/white"
        android:text="Tiến hàng thanh toán"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/custom_button_login"
        android:id="@+id/buttonXuLyCart"
        android:layout_below="@id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>